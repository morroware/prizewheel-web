{
  "meta": {
    "version": "1.0.0",
    "name": "Default Theme",
    "description": "Castle Kingdom default theme with royal purple and gold accents"
  },
  "branding": {
    "title": "Prize Wheel",
    "subtitle": "",
    "logo_url": "",
    "favicon_url": "",
    "show_branding_badge": true,
    "badge_text": "Prize Wheel"
  },
  "theme": {
    "preset": "royal",
    "colors": {
      "primary": "#FFD700",
      "secondary": "#6B46C1",
      "accent": "#FFA500",
      "background": "#0a0a14",
      "background_secondary": "#1a1a2e",
      "text_primary": "#ffffff",
      "text_secondary": "rgba(255,255,255,0.7)",
      "success": "#4caf50",
      "error": "#f44336",
      "warning": "#ff9800"
    },
    "gradients": {
      "background": "linear-gradient(135deg, #0a0a14 0%, #1a1a2e 35%, #16213e 70%, #0a0a14 100%)",
      "overlay_top_left": "radial-gradient(ellipse at top left, rgba(107,70,193,0.15) 0%, transparent 50%)",
      "overlay_top_right": "radial-gradient(ellipse at top right, rgba(30,58,138,0.15) 0%, transparent 50%)",
      "overlay_bottom": "radial-gradient(ellipse at bottom, rgba(255,215,0,0.08) 0%, transparent 40%)"
    },
    "fonts": {
      "heading": "'Cinzel', serif",
      "body": "'Montserrat', sans-serif",
      "google_fonts_url": "https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;800&family=Montserrat:wght@400;600;800&display=swap"
    }
  },
  "wheel": {
    "size": {
      "max_size_px": 900,
      "size_vmin": 85,
      "mobile_size_vmin": 92
    },
    "segments": {
      "border_width": 3,
      "border_color": "rgba(0,0,0,0.4)",
      "inner_border_color": "rgba(255,255,255,0.15)",
      "gradient_enabled": true,
      "gradient_lighten_center": 35,
      "gradient_lighten_mid": 15,
      "gradient_darken_edge": 25
    },
    "text": {
      "font_family": "'Cinzel', serif",
      "font_weight": "900",
      "max_font_size": 24,
      "min_font_size": 8,
      "color": "#ffffff",
      "stroke_color": "rgba(0,0,0,0.8)",
      "stroke_width_ratio": 0.125,
      "use_gradient": true,
      "gradient_colors": ["#FFFFFF", "#F8F8FF", "#E6E6FA"]
    },
    "center": {
      "size_ratio": 0.15,
      "background_gradient": ["#4a4a6e", "#2a2a3e", "#1a1a2e", "#0a0a14"],
      "border_color_outer": "#FFB300",
      "border_color_inner": "#FFD700",
      "border_width_outer": 4,
      "border_width_inner": 2,
      "icon": "\u2654",
      "icon_color": "#FFD700",
      "icon_size_ratio": 0.08
    },
    "bezel": {
      "enabled": true,
      "width": 20,
      "colors": ["#FFD700", "#FFA500", "#CD7F32", "#FF8C00"],
      "glow_color": "rgba(255,215,0,0.4)",
      "glow_size": 80,
      "animation_enabled": true
    },
    "studs": {
      "enabled": true,
      "count": 32,
      "size": 16,
      "colors": ["#FFD700", "#FFA500", "#CD7F32"],
      "animation_enabled": true
    },
    "pointer": {
      "style": "triangle",
      "position": "top",
      "width": 84,
      "height": 80,
      "color": "#FFD700",
      "glow_enabled": true,
      "glow_color": "rgba(255,215,0,0.8)",
      "animation_enabled": true
    },
    "animation": {
      "float_enabled": true,
      "float_amplitude_px": 8,
      "float_duration_s": 8,
      "hover_scale": 1.03,
      "hover_brightness": 1.1
    }
  },
  "spin": {
    "duration_ms": 8000,
    "easing": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
    "min_rotations": 10,
    "max_extra_rotations": 6,
    "cooldown_ms": 3000
  },
  "effects": {
    "confetti": {
      "enabled": true,
      "winner_count": 150,
      "loser_count": 50,
      "winner_colors": ["#FFD700", "#FFA500", "#FF69B4", "#00CED1", "#9370DB", "#FF6347", "#32CD32"],
      "loser_colors": ["#C0C0C0", "#A8A8A8", "#D3D3D3", "#B8860B"],
      "gravity": 0.12,
      "particle_max_life": 400
    },
    "winner_flash": {
      "enabled": true,
      "duration_ms": 4000,
      "intensity": 0.5,
      "frequency": 0.015
    },
    "background_shimmer": {
      "enabled": true,
      "duration_s": 20,
      "min_opacity": 0.7
    }
  },
  "modal": {
    "delay_ms": 4500,
    "auto_close_ms": 6000,
    "backdrop_blur": 15,
    "backdrop_color": "rgba(0,0,0,0.95)",
    "card": {
      "background": "linear-gradient(135deg, rgba(26,26,46,0.98), rgba(42,26,78,0.98))",
      "border_radius": 30,
      "max_width": 700,
      "padding": "80px 50px 50px"
    },
    "winner": {
      "border_gradient": ["#FFD700", "#FFA500", "#CD7F32"],
      "crest_icon": "&#127942;",
      "crest_colors": ["#FFD700", "#FFA500", "#CD7F32"],
      "badge_text": "WINNER",
      "badge_background": "linear-gradient(135deg, #FFD700, #FFA500)",
      "title_text": "Royal Victory"
    },
    "loser": {
      "border_gradient": ["#C0C0C0", "#A8A8A8", "#CD7F32"],
      "crest_icon": "&#128737;",
      "crest_colors": ["#C0C0C0", "#A8A8A8", "#CD7F32"],
      "badge_text": "TRY AGAIN",
      "badge_background": "linear-gradient(135deg, #CD7F32, #B87333)",
      "title_text": "Noble Effort"
    },
    "animation": {
      "entrance": "cardMajesticAppear",
      "entrance_duration": "0.8s",
      "crest_rotation_enabled": true,
      "crest_rotation_duration": "20s"
    }
  },
  "sounds": {
    "enabled": true,
    "master_volume": 75,
    "system": {
      "spin": {
        "path": "/static/sounds/spin.wav",
        "volume": 1.0
      },
      "winner": {
        "path": "/static/sounds/victory.wav",
        "volume": 1.0
      },
      "loser": {
        "path": "/static/sounds/try-again.wav",
        "volume": 1.0
      },
      "tick": {
        "enabled": true,
        "path": "/static/sounds/tick.wav",
        "volume": 0.5
      },
      "ambient": {
        "enabled": false,
        "path": "",
        "volume": 0.3,
        "loop": true
      }
    }
  },
  "status_indicator": {
    "enabled": true,
    "position": "top-left",
    "spinning_color": "#ff9800",
    "cooldown_color": "#2196f3",
    "ready_color": "#4caf50",
    "auto_hide_ready": true,
    "auto_hide_delay_ms": 2000
  },
  "accessibility": {
    "focus_outline_enabled": true,
    "focus_outline_color": "rgba(255, 215, 0, 0.6)",
    "keyboard_controls": true,
    "aria_labels": true,
    "reduced_motion_support": true
  },
  "advanced": {
    "canvas_pixel_ratio_max": 2,
    "preload_sounds": true,
    "debug_mode": false,
    "custom_css": "",
    "custom_js": ""
  }
}
